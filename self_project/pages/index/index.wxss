
.main-window {
  position: relative;
}

/* 请根据实际需求修改父元素尺寸，组件自动识别宽高 */
.charts{
  margin-top: 10rpx;
  padding: 10rpx;
  width: 710rpx;
  height: 590rpx;
}

.buttons {
  height: 90rpx;
  display: flex;
  position: relative;
  margin-right: 20rpx;
}

.showAll {
  flex: 3;
  margin-left: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: aqua;
  border-radius: 10%;
}

.addWord {
  flex: 3;
  margin-left: 20rpx;
  margin-right: 80rpx;
  display: flex;
  text-align: center;
  align-items: center;
  background-color: rgb(195, 215, 223);
  border-radius: 10%;
}
.refresh[plain] {
  flex: 1;
  border: none;
  padding: 0;
  margin-top: 10rpx;
}

.refresh image {
  width: 60rpx;
  height: 60rpx;
}
